@model IEnumerable<NguyenMinhHiep220900100project2.Models.DanhMuc>

@{
    ViewBag.Title = "Quản Lý Danh Mục";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">@ViewBag.Title</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="lead">Danh sách các danh mục sản phẩm.</p>
        @Html.ActionLink("Thêm Danh Mục Mới", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenDanhMuc)</th>
                <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
                <th>@Html.DisplayNameFor(model => model.NgayCapNhat)</th>
                <th class="text-center">Thao Tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenDanhMuc)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayTao)</td>
                    <td>@Html.DisplayFor(modelItem => item.NgayCapNhat)</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaDanhMuc }, new { @class = "btn btn-sm btn-warning" })
                            @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaDanhMuc }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaDanhMuc }, new { @class = "btn btn-sm btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
